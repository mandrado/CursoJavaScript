<%- include('includes/head') %>
<%- include('includes/nav') %>

    <div class="container"></div>

    <div class="row">
        
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <%- include('includes/messages'); %> 
          <div class="row">
            <div class="col-lg my-5">
              <h4 class="text-center">Faça seu login</h4>
              <p class="text-center lead">Se você já tem uma conta, faça login abaixo, se não clique no menu Registrar.</p>
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label for="InputEmail">Endereço de E-mail</label>
                  <input type="email" class="form-control" id="InputEmail" name="email" aria-describedby="emailHelp" placeholder="Entre com seu e-mail">
                  <small id="emailHelp" class="form-text text-muted">Nunca compartilharemos seu e-mail com mais ninguém.</small>
                </div>
                <div class="form-group">
                  <label for="InputPassword">Sua senha</label>
                  <input type="password" class="form-control" id="InputPassword" name="password" placeholder="Senha">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>
        </div>
        
        <div class="col-lg-2"></div>

    </div>

<%- include('includes/footer') %>